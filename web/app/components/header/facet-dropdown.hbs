<X::DropdownList
  @items={{@facets}}
  @listIsOrdered={{true}}
  @offset={{hash mainAxis=3 crossAxis=-5}}
  @renderOut={{true}}
  @placement={{@placement}}
  class="facet-dropdown-popover"
  ...attributes
>
  <:anchor as |dd|>
    {{! TODO: increase z-index on click }}
    <dd.ToggleButton
      class="-ml-px
        {{if (eq @position 'center') 'rounded-none'}}
        {{if (eq @position 'right') 'rounded-l-none'}}
        {{if (eq @position 'left') 'rounded-r-none'}}"
      @text={{@label}}
      disabled={{@disabled}}
    />
  </:anchor>
  <:item as |dd|>
    <dd.LinkTo
      @route={{this.currentRouteName}}
      @query={{get-facet-query-hash @label dd.value dd.attrs.isSelected}}
    >
      <X::DropdownList::CheckableItem
        @value={{dd.value}}
        @count={{dd.attrs.count}}
        @isSelected={{dd.attrs.isSelected}}
      />
    </dd.LinkTo>
  </:item>
</X::DropdownList>
