{{! @glint-nocheck: not typesafe yet }}
{{page-title "Authenticate"}}
{{set-body-class "route--authenticate"}}

<div class="min-h-screen flex items-center px-4">
  <div class="w-full max-w-xl mx-auto">
    <Hds::Card::Container
      @level="high"
      @hasBorder="true"
      @overflow="visible"
      class="card-container"
    >
      <HermesLogo class="mb-8 mx-auto inline-flex" />
      <h1>Welcome to Hermes.</h1>
      <p class="mb-8">
        Log in to browse, search, and manage documents
      </p>
      <Hds::Button
        @text="Authenticate with Google"
        @size="large"
        @icon="google"
        class="mx-auto inline-flex"
        {{on "click" (perform this.authenticate)}}
      />
    </Hds::Card::Container>
    <Footer class="compact" />
  </div>
</div>
